{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h1 class="display-4 text-center" id="titreconnexion">Connexion</h1>





    <form action="{{ path('security_login') }}" method="post">
        <div class="row">
            <div class="col-md-6 col-sm-12 mx-auto">
                <div class="form-group">
                    <input
                        id="login1" 
                        placeholder="Pseudo" 
                        required 
                        name="_username"
                        type="text" 
                        class="form-control"
                    />
                </div>
                <div class="form-group">
                    <input
                        id="login2"
                        placeholder="Mot de passe" 
                        required 
                        name="_password"
                        type="password" 
                        class="form-control"
                    />
                </div>
                <div class="container text-center ">
                    <button type="submit" class="btn btn-info mt-3 mb-5">Connexion</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="text-center">
<img src="css/images/robot4.png"/>
</div>





{% endblock %}